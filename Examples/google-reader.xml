<interface>
	<!--
		Trigger every 300 seconds.
	-->
	<object class="IfThenElseTimerTrigger" id="google_reader_trigger">
		<property name="timeout">600</property>
		<child>
			<object class="IfThenElseChain" id ="google_reader_network">
				<!--
					Network
				-->
				<child type="if">
					<object class="IfThenElseExternalToolCheck" id="google_reader_network_check">
							<property name="cmd">nmcli -t -f STATE nm</property>
							<property name="output_compare">connected</property>
					</object>
				</child>
				<!-- 
					If we are not connected
				-->
				<child type="else">
					<object class="IfThenElseDebugAction" id="google_reader_network_else_action">
						<property name="message">Not Connected.</property>
					</object>
				</child>
				<!--
					If we are connected, do this.
				-->
				<child type="then">
					<object class="IfThenElseTimerTrigger" id="google_reader_chain_trigger">
						<property name="timeout">150</property>
						<child>
							<object class="IfThenElseChain" id="google_reader_chain">
								<!-- 
									Check google reader.
								-->
								<child type="if">
									<object class="IfThenElseExternalToolCheck" id="google_reader_check">
										<property name="cmd">Scripts/google-reader-check.sh</property>
									</object>
								</child>
								<!--
									If google reader checks.
								-->
								<child type="then">
									<object class="IfThenElseMultiAction" id="google_reader_then_multi_action">
										<child>
											<object class="IfThenElseStatusIconAction" id="google_reader_activate_action">
													<property name="file">Images/reader.png</property>
											</object>
										</child>
										<child>
											<object class="IfThenElseExternalToolAction" id="goog_reader_activate_then_noti">
													<property name="cmd">Scripts/google-reader-show.sh</property>
											</object>
										</child>
									</object>
								</child>
								<child type="else">
									<object class="IfThenElseDebugAction" id="google_reader_else_action">
										<property name="message">No unread messages</property>
									</object>
								</child>
							</object>
						</child>
					</object>
				</child>
			</object>
		</child>
	</object>
</interface>
