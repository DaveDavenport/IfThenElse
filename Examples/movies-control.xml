<?xml version="1.0"?>
<interface>
  <object class="IfThenElseTimerTrigger" id="lights_timer">
    <property name="timeout">5</property>
    <child>
      <object class="IfThenElseExternalToolCheck" id="check_movie">
        <property name="cmd">./Scripts/check_movie.sh</property>
        <property name="true_status">1</property>
        <property name="false_status">0</property>
        <property name="compare_old_state">true</property>
        <child type="then">
          <object class="IfThenElseMultiAction" id="main_multiplier">
            <child>
              <object class="IfThenElseExternalToolAction" id="lights_on_action">
                <property name="cmd">mpc -h 192.150.0.103 pause</property>
                <property name="kill_child">false</property>
              </object>
            </child>
            <child>
              <object class="IfThenElseExternalToolAction" id="lights_on_action2">
                <property name="cmd">irsend SEND_ONCE NAD_SR6 Disc</property>
                <property name="kill_child">false</property>
              </object>
            </child>
            <child>
              <object class="IfThenElseExternalToolAction" id="lights_on_action3">
                <property name="cmd">switch_lights.sh A2 off</property>
                <property name="kill_child">false</property>
              </object>
            </child>
            <child>
              <object class="IfThenElseExternalToolAction" id="lights_on_action4">
                <property name="cmd">switch_lights.sh A3 off</property>
                <property name="kill_child">false</property>
              </object>
            </child>
            <child>
              <object class="IfThenElseExternalToolAction" id="lights_on_action5">
                <property name="cmd">gajim-remote change_status away "Watch Movie"</property>
                <property name="kill_child">false</property>
              </object>
            </child>
          </object>
        </child>
        <child type="else">
          <object class="IfThenElseMultiAction" id="main_multiplier2">
            <child>
              <object class="IfThenElseExternalToolAction" id="movie_off_action">
                <property name="cmd">switch_lights.sh A2 on</property>
                <property name="kill_child">false</property>
              </object>
            </child>
            <child>
              <object class="IfThenElseExternalToolAction" id="movie_off_action2">
                <property name="cmd">irsend SEND_ONCE NAD_SR6 Video-1</property>
                <property name="kill_child">false</property>
              </object>
            </child>
            <child>
              <object class="IfThenElseExternalToolAction" id="lights_off_action3">
                <property name="cmd">gajim-remote change_status online</property>
                <property name="kill_child">false</property>
              </object>
            </child>
          </object>
        </child>
      </object>
    </child>
  </object>
</interface>
