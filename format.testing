[Check]
type=ExternalToolCheck
cmd=Scripts/check_movie.sh
# Properties
true_status=1
false_status=0
compare_old_state=true
#Children
childthen=Action2
childelse=Action1

[Trigger]
type=TimerTrigger
timeout=5
child=Check

[Action1]
type=ExternalToolAction
cmd=mpc play

[Action2]
type=ExternalToolAction
cmd=mpc pause

