[Trigger]
type=TimerTrigger
timeout=5
action=Check


[Check]
type=ExternalToolCheck
cmd=Scripts/check_movie.sh
# Properties
true_status=1
false_status=0
compare_old_state=true
#Children
else_action=Action2
then_action=MultiAction


[MultiAction]
type=MultiAction
action=Action1;Action3

[Action1]
type=ExternalToolAction
cmd=mpc play

[Action3]
type=ExternalToolAction
cmd=echo testing

[Action2]
type=ExternalToolAction
cmd=mpc pause

